<!doctype html>
<html lang="{{ site.lang }}">
  <head>
    {% set pagePath = page.url or "/" %}
    {% set canonicalHref = canonicalUrl or (pagePath | absoluteUrlFor(site.url)) %}
    {% set resolvedMetaImagePath = metaImage or site.socialImage or site.logo %}
    {% set resolvedMetaImage = resolvedMetaImagePath | absoluteUrlFor(site.url) %}
    {% set resolvedTitleSuffix = "" %}
    {% if titleSuffix != false %}
      {% set resolvedTitleSuffix = " – " ~ (titleSuffix or site.titleSuffix) %}
    {% endif %}
    {% set resolvedMetaTitle = title ~ resolvedTitleSuffix %}
    {% set resolvedMetaDescription = description or site.defaultDescription %}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}{% if titleSuffix != false %} – {{ titleSuffix or site.titleSuffix }}{% endif %}</title>
    <meta name="description" content="{{ resolvedMetaDescription }}" />
    <link rel="canonical" href="{{ canonicalHref }}" />
    <meta name="robots" content="{{ robots or 'index,follow,max-image-preview:large' }}" />
    <meta property="og:type" content="{{ ogType or 'website' }}" />
    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:title" content="{{ resolvedMetaTitle }}" />
    <meta property="og:description" content="{{ resolvedMetaDescription }}" />
    <meta property="og:url" content="{{ canonicalHref }}" />
    <meta property="og:image" content="{{ resolvedMetaImage }}" />
    <meta property="og:image:alt" content="{{ ogImageAlt or site.name }}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ resolvedMetaTitle }}" />
    <meta name="twitter:description" content="{{ resolvedMetaDescription }}" />
    <meta name="twitter:image" content="{{ resolvedMetaImage }}" />

    {% include "partials/head.njk" %}

    {% if headExtras %}
      {{ headExtras | safe }}
    {% endif %}
  </head>
  <body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}{% if bodyAttrs %} {{ bodyAttrs | safe }}{% endif %}>
    <div class="page-loader" aria-hidden="true">
      <div class="page-loader__inner">
        <img src="/assets/logo2LightBG.png" alt="" class="page-loader__logo" />
        <div class="page-loader__spinner"></div>
      </div>
    </div>
    {% if skipLink != false %}
      <a class="visually-hidden-focusable skip-link" href="#main">Skip to content</a>
    {% endif %}

    {% if nav != false %}
      {% include "partials/nav.njk" %}
    {% endif %}

    {{ content | safe }}

    {% if footer != false %}
      {% include "partials/footer.njk" %}
    {% endif %}
  </body>
</html>
